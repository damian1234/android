<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_page">

    <TextView
        android:text="Create Project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="71dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="75dp"
        android:id="@+id/create_proj" />

    <Button
        android:text="create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_proj"
        android:layout_alignRight="@+id/create_proj"
        android:layout_alignEnd="@+id/create_proj"
        android:layout_marginTop="18dp"
        android:id="@+id/create_project_button" />

    <TextView
        android:text="Scan Bar Code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/create_proj"
        android:layout_toRightOf="@+id/create_proj"
        android:layout_toEndOf="@+id/create_proj"
        android:layout_marginLeft="78dp"
        android:layout_marginStart="78dp"
        android:id="@+id/BC_scanner" />

    <Button
        android:text="Scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/create_project_button"
        android:layout_alignLeft="@+id/BC_scanner"
        android:layout_alignStart="@+id/BC_scanner"
        android:id="@+id/scan" />
</RelativeLayout>